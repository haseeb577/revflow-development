[Unit]
Description=RevFlow CTA Enforcement Engine Service
After=network.target

StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=simple
User=root
WorkingDirectory=/opt/revflow-pipeline/microservices/cta-engine
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 /opt/revflow-pipeline/microservices/outline-generator/CTA_ENGINE_app.py
StandardOutput=append:/opt/revflow-pipeline/microservices/cta-engine/cta.log
StandardError=append:/opt/revflow-pipeline/microservices/cta-engine/cta.log

Restart=on-failure
RestartSec=10s
CPUAccounting=true
MemoryAccounting=true
MemoryHigh=2G
MemoryMax=3G

[Install]
WantedBy=multi-user.target

