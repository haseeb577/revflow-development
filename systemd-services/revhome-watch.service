[Unit]
Description=RevHome watchdog (checks app health and restarts container)
After=network.target docker.service
Wants=docker.service

StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=oneshot
ExecStart=/usr/local/bin/revhome-watch.sh
User=root
Nice=0

Restart=on-failure
RestartSec=10s
CPUAccounting=true
MemoryAccounting=true
MemoryHigh=2G
MemoryMax=3G

[Install]
WantedBy=multi-user.target

