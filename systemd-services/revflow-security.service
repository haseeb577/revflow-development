[Unit]
Description=RevFlow Security Monitor Service
After=network.target postgresql.service

StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=simple
User=root
WorkingDirectory=/opt/revflow-lead-engine/backend/security
Environment="PYTHONPATH=/opt/revflow-lead-engine"
EnvironmentFile=/opt/shared-api-engine/.env
ExecStart=/usr/bin/python3 main.py
StandardOutput=append:/opt/revflow-lead-engine/logs/security.log
StandardError=append:/opt/revflow-lead-engine/logs/security-error.log

Restart=on-failure
RestartSec=10s
CPUAccounting=true
MemoryAccounting=true
MemoryHigh=2G
MemoryMax=3G

[Install]
WantedBy=multi-user.target

