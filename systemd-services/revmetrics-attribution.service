[Unit]
Description=RevMetrics Attribution API (Port 8401)
After=network.target postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/revflow-os/modules/revmetrics
Environment="PATH=/opt/revflow-os/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
EnvironmentFile=/opt/shared-api-engine/.env
ExecStart=/opt/revflow-os/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8401
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
