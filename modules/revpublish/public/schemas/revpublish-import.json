{
  "name": "RevPublish Import",
  "version": "16.3.0",
  "layout": {
    "type": "container",
    "style": {
      "padding": "2rem"
    },
    "children": [
      {
        "type": "header",
        "level": 2,
        "text": "\ud83d\udce5 Bulk Import"
      },
      {
        "type": "container",
        "style": {
          "background": "#1e293b",
          "padding": "1.5rem",
          "borderRadius": "8px",
          "marginBottom": "2rem"
        },
        "children": [
          {
            "type": "header",
            "level": 3,
            "text": "\ud83d\udce6 Download Test Files",
            "style": {
              "marginBottom": "1rem"
            }
          },
          {
            "type": "text",
            "dangerouslySetInnerHTML": true,
            "content": "<div style='display:flex;gap:1rem;flex-wrap:wrap;'><a href='https://automation.smarketsherpa.ai/revflow_os/revpublish/templates/Sample_12_Sites.csv' download='Sample_12_Sites.csv' style='display:inline-block;background:#22c55e;color:#fff;padding:0.75rem 1.5rem;border-radius:6px;text-decoration:none;font-weight:600;'>\u2b07\ufe0f CSV Template (Includes ALL Content)</a></div>"
          }
        ]
      },
      {
        "type": "form",
        "action": "/api/import",
        "method": "POST",
        "enctype": "multipart/form-data",
        "fields": [
          {
            "type": "select",
            "name": "target_site",
            "label": "üåê Select WordPress Site",
            "required": true,
            "dataSource": "/api/sites?per_page=100",
            "dataPath": "sites",
            "valueField": "site_url",
            "labelField": "site_name",
            "placeholder": "Choose a WordPress site..."
          },
          {
            "type": "select",
            "name": "target_page_id",
            "label": "üß© Target Existing Page (Optional)",
            "required": false,
            "dataSource": "/api/site-pages?site_url={target_site}&per_page=100",
            "dataPath": "pages",
            "valueField": "id",
            "labelField": "display_name",
            "dependsOn": "target_site",
            "dependsOnPlaceholder": "Select site first, then choose page",
            "placeholder": "Leave empty to create new pages"
          },
          {
            "type": "checkbox",
            "name": "update_selected_page_only",
            "label": "üîí Update Selected Page Only (No New Page)",
            "description": "When enabled, import fails instead of creating any new page.",
            "defaultValue": true
          },
          {
            "type": "file",
            "name": "csv_file",
            "label": "\ud83d\udccb Site Registry & Content (CSV with everything)",
            "required": true,
            "accept": ".csv",
            "description": "Supports row-wise page update columns: existing_page_id, target_page_id, page_id, existing_page_url, target_page_url, page_url, existing_page_slug, target_page_slug."
          },
          {
            "type": "select",
            "name": "animation_style",
            "label": "\ud83c\udfac Animation Style (Level 3 Override)",
            "required": false,
            "options": [
              {
                "value": "",
                "label": "Use Page Type Default"
              },
              {
                "value": "professional",
                "label": "Professional"
              },
              {
                "value": "subtle",
                "label": "Subtle"
              },
              {
                "value": "dynamic",
                "label": "Dynamic"
              },
              {
                "value": "energetic",
                "label": "Energetic"
              },
              {
                "value": "none",
                "label": "None"
              }
            ]
          },
          {
            "type": "checkbox",
            "name": "enable_smart_corrections",
            "label": "\u2728 Smart Corrections",
            "defaultValue": true
          },
          {
            "type": "checkbox",
            "name": "preview_mode",
            "label": "\ud83d\udc41\ufe0f Preview Mode",
            "description": "Preview only - don't deploy to WordPress",
            "defaultValue": true
          },
          {
            "type": "checkbox",
            "name": "use_bridge_plugin",
            "label": "\ud83c\udf09 Bridge Plugin Mode",
            "description": "Send HTML content - Bridge Plugin converts to Elementor (Recommended)",
            "defaultValue": true
          },
          {
            "type": "checkbox",
            "name": "preserve_formatting",
            "label": "üõ°Ô∏è Preserve Existing Page Formatting",
            "description": "For page updates, require bridge-based update to keep Elementor layout/styles",
            "defaultValue": true
          },
          {
            "type": "select",
            "name": "post_status",
            "label": "\ud83d\udccb Status",
            "defaultValue": "draft",
            "options": [
              {
                "value": "draft",
                "label": "Draft"
              },
              {
                "value": "publish",
                "label": "Publish"
              },
              {
                "value": "pending",
                "label": "Pending Review"
              }
            ]
          }
        ],
        "submitButton": {
          "text": "\ud83d\ude80 Import"
        }
      }
    ]
  }
}