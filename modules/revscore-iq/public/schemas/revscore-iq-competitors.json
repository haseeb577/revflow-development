{
  "name": "Competitor Selection",
  "version": "2.0.0",
  "layout": {
    "type": "container",
    "children": [
      {
        "type": "header",
        "level": 1,
        "text": "Competitor Selection"
      },
      {
        "type": "text",
        "content": "Step 2 of 4: Add 3-5 competitors for benchmarking",
        "style": {
          "color": "#94a3b8",
          "marginBottom": "2rem"
        }
      },
      {
        "type": "form",
        "action": "/api/assessments/{assessment_id}/competitors",
        "method": "POST",
        "fields": [
          {
            "type": "text",
            "name": "competitor_1_name",
            "label": "Competitor 1 Name",
            "placeholder": "Competitor business name"
          },
          {
            "type": "text",
            "name": "competitor_1_url",
            "label": "Competitor 1 URL",
            "placeholder": "https://competitor1.com"
          },
          {
            "type": "text",
            "name": "competitor_2_name",
            "label": "Competitor 2 Name",
            "placeholder": "Competitor business name"
          },
          {
            "type": "text",
            "name": "competitor_2_url",
            "label": "Competitor 2 URL",
            "placeholder": "https://competitor2.com"
          },
          {
            "type": "text",
            "name": "competitor_3_name",
            "label": "Competitor 3 Name",
            "placeholder": "Competitor business name"
          },
          {
            "type": "text",
            "name": "competitor_3_url",
            "label": "Competitor 3 URL",
            "placeholder": "https://competitor3.com"
          }
        ],
        "submitButton": {
          "text": "Next: Configuration →"
        }
      },
      {
        "type": "spacer",
        "height": "1rem"
      },
      {
        "type": "link",
        "url": "#dashboard",
        "label": "← Back to Dashboard",
        "style": {
          "color": "#94a3b8",
          "textDecoration": "none"
        }
      }
    ]
  }
}

