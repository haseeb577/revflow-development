# RevFlow Enrichment Service - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
SERVICE_NAME="RevFlow Enrichment Service"
SERVICE_VERSION="1.0.0"
PORT=8500
DEBUG=false

# ============================================================================
# BACKEND INTEGRATION
# ============================================================================
BACKEND_URL="http://217.15.168.106:5000"

# ============================================================================
# EMAIL FINDING - PRIMARY: AUDIENCELAB (YOU HAVE THIS)
# ============================================================================

# AudienceLab - https://audiencelab.io/
# 280M verified US consumer profiles (95% accuracy)
# SuperPixel 80% visitor match rate
# Emails included in data + already verified
# YOU ALREADY HAVE THIS
AUDIENCELAB_API_KEY="your_audiencelab_api_key_here"

# OPTIONAL: Backup email finders (not needed if AudienceLab sufficient)
PROSPEO_API_KEY=""
DATAGMA_API_KEY=""

# ============================================================================
# EMAIL VALIDATION - MILLIONVERIFIER (YOU HAVE THIS)
# ============================================================================

# MillionVerifier - https://www.millionverifier.com/
# YOU ALREADY HAVE THIS ACCOUNT
# Note: AudienceLab emails are already verified, but this provides extra validation
MILLIONVERIFIER_API_KEY="your_millionverifier_api_key_here"

# Twilio - https://www.twilio.com/console
# Pricing: $0.005 per lookup
# Required: Account SID + Auth Token
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"

# ============================================================================
# ENRICHMENT SERVICES (Core)
# ============================================================================

# People Data Labs - https://www.peopledatalabs.com/pricing
# Pricing: $299/mo for 10,000 enrichments
# Cost per enrichment: ~$0.03-0.05
# This is the MOST IMPORTANT integration - provides person + company data
PEOPLE_DATA_LABS_API_KEY="your_pdl_api_key_here"

# ============================================================================
# DATAFORSEO (You already have this)
# ============================================================================

# DataForSEO - https://dataforseo.com/
# Pricing: Pay-as-you-go, ~$0.05 per request
# Used for: Tech stack, backlinks, keywords, reviews
DATAFORSEO_LOGIN="your_dataforseo_login_here"
DATAFORSEO_PASSWORD="your_dataforseo_password_here"

# ============================================================================
# AUDIENCELAB (You already have this)
# ============================================================================

# AudienceLab - https://audiencelab.io/
# Pricing: Custom (likely $500-1000/mo for unlimited)
# SuperPixel 80% visitor identification
AUDIENCELAB_API_KEY="your_audiencelab_api_key_here"

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# Crunchbase - https://www.crunchbase.com/
# Pricing: Custom
# Used for: Funding data (optional)
CRUNCHBASE_API_KEY=""

# ContactOut - https://contactout.com/
# Pricing: $99/mo for 2,500 contacts
# Alternative phone finder
CONTACTOUT_API_KEY=""

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# CACHING (Optional - requires Redis)
# ============================================================================
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=3600

# ============================================================================
# COST TRACKING
# ============================================================================
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.0

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="INFO"

